@model bojan_recipe.Models.Tutorial

@{
    ViewData["Title"] = "Delete";
}

<style>
    .video-container {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        height: 0;
        overflow: hidden;
    }

    .video-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>

<h3>Are you sure you want to delete this Tutorial?</h3>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">Name</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TutorialName)
        </dd>
        <dt class="col-sm-2">Description</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TutorialDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2">Video</dt>
        <dd class = "col-sm-10">
            <div class="video-container">
                <iframe src="@Model.TutorialVideoUrl" frameborder="0" allowfullscreen></iframe>
            </div>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TutorialId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
