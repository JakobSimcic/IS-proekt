@model bojan_recipe.Models.Tutorial

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Tutorial</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TutorialName" class="control-label">Name</label>
                <input asp-for="TutorialName" class="form-control" />
                <span asp-validation-for="TutorialName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TutorialDescription" class="control-label">Description</label>
                <textarea asp-for="TutorialDescription" class="form-control" rows="6"></textarea>
                <span asp-validation-for="TutorialDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TutorialVideoUrl" class="control-label">Video</label>
                <input asp-for="TutorialVideoUrl" class="form-control" />
                <span asp-validation-for="TutorialVideoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" asp-items="ViewBag.TutorialCategoryList" class="form-control"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 20px">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}