@model bojan_recipe.Models.Gallery

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete this?</h3>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">Name</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GalleryName)
        </dd>
        <dt class="col-sm-2">Description</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GalleryDescription)
        </dd>
        <dt class = "col-sm-2">Image</dt>
        <dd class = "col-sm-10">
            <img src="@Model.GalleryImageUrl" class="img-fluid" alt="Recipe Image">
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GalleryId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
