@model IEnumerable<bojan_recipe.Models.Gallery>

@{
    ViewData["Title"] = "Index";
}

<style>
    .gallery-image {
        height: 260px;
        width: 100%;
        object-fit: cover;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1>Image Gallery</h1>
        </div>
        <div class="col-md-8 text-right">
            <div class="row">
                <div class="form-group col-md-9"></div>              
                <div class="form-group col-sm-3">
                    <a class="btn btn-primary" style="margin-bottom: 40px" asp-action="Create">Add a Photo</a>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">  
            <div class="card">
                <a asp-action="Details" asp-route-id="@item.GalleryId">
                    <img src="@item.GalleryImageUrl" class="card-img-top gallery-image" alt="@item.GalleryName">
                </a>
                <div class="card-body">
                    <h5>@item.GalleryName</h5>
                </div>
            </div>           
        </div>
    }
</div>
