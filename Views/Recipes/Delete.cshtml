@model bojan_recipe.Models.Recipe

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this Recipe?</h3>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preparation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preparation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ingredients)
        </dd>
        <dt class="col-sm-2">Calory Count</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CaloryCount)
        </dd>
        <dt class = "col-sm-2">Type of Recipe</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        @if (Model.Type == bojan_recipe.Models.RecipeType.Food)
        {
            <dt class="col-sm-2">Type of Food</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FoodType)
            </dd>
        }
        @if (Model.Type == bojan_recipe.Models.RecipeType.Drink)
        {
            <dt class="col-sm-2">Is it Alcoholic</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsAlcoholic)
            </dd>
        }
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" class="img-fluid" alt="Recipe Image">
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
