@model bojan_recipe.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="mt-4">@Html.DisplayFor(model => model.Name)</h1>
    <hr />

    <div class="row">
        <!-- Image on the left -->
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="Recipe Image">
        </div>

        <!-- Details on the right -->
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9" style="white-space: pre-wrap;">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">Preparation:</dt>
                <dd class="col-sm-9" style="white-space: pre-wrap;">@Html.DisplayFor(model => model.Preparation)</dd>         
                
                <dt class="col-sm-3">Ingredients:</dt>
                <dd class="col-sm-9" style="white-space: pre-wrap;">@Html.DisplayFor(model => model.Ingredients)</dd>  

                <dt class="col-sm-3">Calory Count:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CaloryCount)</dd>

                <dt class="col-sm-3">Type of Recipe:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Type)</dd>

                @if (Model.Type == bojan_recipe.Models.RecipeType.Food)
                {
                    <dt class="col-sm-3">Type of Food:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FoodType)</dd>
                }
                @if (Model.Type == bojan_recipe.Models.RecipeType.Drink)
                {
                    <dt class="col-sm-3">Is it Alcoholic:</dt>
                    <dd class="col-sm-9">
                        @if (Model.Type == bojan_recipe.Models.RecipeType.Drink)
                        {
                            <text>@(Model.IsAlcoholic ? "Yes" : "No")</text>
                        }
                        else
                        {
                            <text>N/A</text>
                        }
                    </dd>
                }
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.Id">Delete</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
